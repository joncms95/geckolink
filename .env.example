# Database (optional in development; defaults from config/database.yml)
# DATABASE_URL=postgres://localhost:5432/geckolink_development

# Redis: Sidekiq, Action Cable, and (in production) Rails cache
# REDIS_URL=redis://localhost:6379/0

# Optional: dedicated Redis for cache (production). If unset, REDIS_URL is used.
# REDIS_CACHE_URL=redis://localhost:6379/1

# Production (required for Docker): secret for signing/encryption. Generate with: openssl rand -hex 64
# SECRET_KEY_BASE=

# Set to 1 when running Docker locally (localhost) to allow HTTP instead of redirecting to HTTPS
# DISABLE_SSL_REDIRECT=1

# Production: master key to decrypt credentials (optional if SECRET_KEY_BASE is set)
# RAILS_MASTER_KEY=

# Production (e.g. Docker): password for PostgreSQL when not using DATABASE_URL
# Must match config/database.yml production and docker-compose (POSTGRES_PASSWORD).
# POSTGRES_PASSWORD=

# CORS: comma-separated allowed origins (e.g. https://app.example.com,http://localhost:5173).
# If unset, defaults to https://geckolink.vercel.app and http://localhost:5173.
# CORS_ORIGINS=

# Client (React): base URL of the API with no trailing slash (e.g. https://api.example.com)
# Used when frontend is deployed separately (e.g. Vercel). Leave unset for same-origin.
# VITE_API_BASE=
